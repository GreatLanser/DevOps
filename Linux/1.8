do
cast=$(( 1 + RANDOM % 6 ))
array[$cast]=$(( array[cast]+1 ))
done
echo "единицы: ${array[1]}"
echo "двойки: ${array[2]}"
echo "тройки: ${array[3]}"
echo "четверки: ${array[4]}"
echo "пятерки: ${array[5]}"
echo "шестерки: ${array[6]}"
